<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <packageSources>
        <clear />
        <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
        <add key="OrchardCorePreview" value="https://nuget.cloudsmith.io/orchardcore/preview/v3/index.json" />
        <add key="CrestAppsPreview" value="https://nuget.cloudsmith.io/crestapps/crestapps-orchardcore/v3/index.json" />
    </packageSources>

    <packageSourceMapping>
        <!-- Map OrchardCore packages with preview versions to the OrchardCorePreview source -->
        <packageSource key="OrchardCorePreview">
            <package pattern="OrchardCore.*-preview" />
            <package pattern="TheAdmin-preview" />
            <package pattern="TheTheme-preview" />
            <package pattern="TheBlogTheme-preview" />
            <package pattern="TheAgencyTheme-preview" />
            <package pattern="SafeMode-preview" />
            <package pattern="TheComingSoonTheme-preview" />
        </packageSource>

        <!-- Map CrestApps packages to CrestAppsPreview -->
        <packageSource key="CrestAppsPreview">
            <package pattern="CrestApps.*" />
        </packageSource>

        <!-- All remaining packages (including stable OrchardCore ones) come from nuget.org -->
        <packageSource key="nuget.org">
            <package pattern="*" />
        </packageSource>
    </packageSourceMapping>
</configuration>
